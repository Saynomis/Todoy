<%- include('partials/header.ejs') %>

<main>
  <div class="d-flex justify-content-center py-5" id="heading">
    <h1>Work</h1>
  </div>
  <div class="align-items-center d-flex justify-content-center">
    <form class="item" action="/work" method="post">
      <input
        type="text"
        name="newWorkItem"
        placeholder="New Item"
        autocomplete="off"
        class="custom-input" 
      />
      <button type="submit" name="list" value="Tuesday, October 24">
        +
      </button>
    </form>
  </div>
  
  </div>
  <div
    class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center"
  >
    <div class="list-group col-sm-6">
      <% for (var i = 0; i < locals.lengthOfWorkTasks; i++) { %>
      <div class="list-group-item">
        <label class="block">
          <div class="task-item">
            <input class="checkbox" type="checkbox" />
            <p><%= newWorkTsk[i] %></p>
          </div>
        </label>
      </div>
      <% } %>
    </div>
  </div>
  <form class="delete-item" action="/deleteWork" method="post">
    <button type="submit" name="list" value="Tuesday, October 24">
      delete
    </button>
  </form>
</main>
</main>

